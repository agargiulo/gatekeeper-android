<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gatekeeper_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <Button
        android:id="@+id/door_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:onClick="popLock"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" />

    <Button
        android:id="@+id/door_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/door_4"
        android:onClick="popLock"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" />

    <Button
        android:id="@+id/door_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/door_5"
        android:onClick="popLock"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" />

    <Button
        android:id="@+id/door_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/door_6"
        android:onClick="popLock"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" />

    <Button
        android:id="@+id/door_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/door_7"
        android:onClick="popLock"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" />

    <Button
        android:id="@+id/door_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/door_8"
        android:onClick="popLock"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" />

</RelativeLayout>